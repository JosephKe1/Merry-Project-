<div class="form-horizontal" style="text-align:center; margin-top:100px;">
<%= form_tag sessions_path do %>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary", style: "padding: 10px 100px 10px 100px; border-radius: 30px; color: white; background-color:#0094FF; font-family:Helvetica;" %>
  </div>
  <% end %>
  <%= link_to "Don't have an account?", new_user_path %>
</div>
