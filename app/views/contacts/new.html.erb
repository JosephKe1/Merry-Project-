<div class="form-horizontal" style="text-align:center; margin-top:100px;">
  <h1>Contact Us</h1>
  <br>
<%= form_tag contact_path do %>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
    <%= text_field_tag :name, nil, placeholder: "Name", class: "form-control" %>
    </div>
    <div class="col-sm-4">
      <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
    <%= text_area_tag :message, nil, placeholder: "Message", class: "form-control", style: "height: 150px;" %>
    </div>
  </div>
  <%= submit_tag  'Contact Us!', class: "btn btn-primary", style: "padding: 10px 100px 10px 100px; border-radius: 30px; color: white; background-color:#0094FF; font-family:Helvetica;" %>
<% end %>
</div>
