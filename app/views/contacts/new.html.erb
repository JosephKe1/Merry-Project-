<div class="form-horizontal" style="text-align:center; margin-top:100px;">
  <h1>Contact Us</h1>
  <br>
<%= @contact.errors.full_messages.join(", ") %>
<%= form_for @contact, url: contact_path do |f| %>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
    <%= f.text_area :message, placeholder: "Message", class: "form-control", style: "height: 150px;" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit  'Contact Us!', class: "btn btn-primary", style: "padding: 10px 100px 10px 100px; border-radius: 30px; color: white; background-color:#0094FF; font-family:Helvetica;" %>
  </div>
<% end %>
</div>
