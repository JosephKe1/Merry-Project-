<div class="form-horizontal" style="text-align:center; margin-top:100px;">
  <h1>Payment</h1>
    <% if @payment.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @payment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- <div class="well"> -->
      <%= form_for [@billing, @payment] do |f| %>
      <%= f.label :credit_card_number, class: "control-label"%>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
          <div class="input-group">
            <%= f.text_field :credit_card_number, placeholder: "Valid Card Number", class: "form-control" %>
            <span class="input-group-addon"><span class="fa fa-lock"></span></span>
          </div>
        </div>
      </div>
        <%= f.label :expiry, class: "control-label"%>
        <div class="form-group">
          <div class="col-sm-2 col-sm-offset-4">
              <%= f.select :expiration_month, months, {}, class: "form-control" %>
            </div>
            <div class="col-sm-2">
              <%= f.select :expiration_year, years, {}, class: "form-control" %>
            </div>
          </div>

        <div class="form-group">
          <div class="col-sm-2 col-sm-offset-5">
            <%= f.label :card_security_code, class: "control-label"%>
            <%= f.text_field :card_security_code, placeholder: "CVV", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-4">
            <%= f.hidden_field :amount, value: 30, class: "form-control"%>
            <span class="label label-primary">Total <span class="fa fa-usd"></span>30</span>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Complete", class: "btn btn-primary", style: "padding: 10px 100px 10px 100px; border-radius: 30px; color: white; background-color:#5cb85c; font-family:Helvetica;"%>
        </div>
      <% end %>
    <!-- </div> -->
  </div>
