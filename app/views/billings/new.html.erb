<div class="form-horizontal" style="text-align:center; margin-top:100px;">
  <h1>Billing Details</h1>
  <br>
  <%= @billing.errors.full_messages.join(", ") %>
  <%= form_for @billing do |f| %>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :last_name, placeholder: "Last name", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :address, placeholder: "Address", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :city, placeholder: "City", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :province, placeholder: "Province", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.text_field :postal_code, placeholder: "Postal Code", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Next", class: "btn btn-primary", style: "padding: 10px 100px 10px 100px; border-radius: 30px; color: white; background-color:#0094FF; font-family:Helvetica;"%>
  </div>
  <% end %>
</div>
